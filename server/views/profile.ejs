<% include head.ejs%>

    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <ul class="nav navbar-nav">
          <a class="navbar-brand" href="/">Q</a>
          <p class="navbar-text navbar-right">
            <% if (user.phone) { %> <a href="/">Queue</a> <% } %>
          </p>
        </ul>
      </div>
    </nav>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.email && user.phone) { %>
                <p>
                    <strong>display name</strong>: <%= user.display %><br>
                    <strong>id</strong>: <%= user.id %><br>
                    <strong>email</strong>: <%= user.email %><br>
                    <strong>phone</strong>:
                    <form action="/phone" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="phone" value="<%= user.phone %>">
                        </div>
                        <button type="submit" class="btn btn-warning btn-lg">Update</button>
                    </form>
                </p>
                <% } else { %>
                    <strong>display name</strong>: <%= user.display %><br>
                    <strong>id</strong>: <%= user.id %><br>
                    <strong>email</strong>: <%= user.email %><br>
                    <strong>You must provide a phone number <br>
                    <form action="/phone" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="phone">
                        </div>
                        <button type="submit" class="btn btn-warning btn-lg">Enter</button>
                    </form>
                <% } %>

            </div>
        </div>

