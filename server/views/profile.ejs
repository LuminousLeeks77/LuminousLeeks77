<% include head.ejs%>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <ul class="nav navbar-nav">
        <a class="navbar-brand" href="/">Q</a>
        <p class="navbar-text navbar-right">
          <% if (user.phone) { %> <a href="/">See Queues</a> <% } %>
          <!-- <a href="/logout"> Logout </a> -->
        </p>
      </ul>
    </div>
  </nav>

    <% if (user.email && !user.phone) { %>
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <h1> Welcome to Queue. </h1>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <h4> What's your number?</h4>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <form action="/phone" method="post" class="form-inline">
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" id="phone" name="phone" value="<%= user.phone %>" placeholder="Phone number">
                  <div class="input-group-addon">
                    <button type="submit" class="btn-enter-update">
                      Submit
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>

    <% } else { %>
      <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h1> Your account </h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <img
            class="img-circle" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
            alt="Generic placeholder image"
            width="60" height="60">
          <div class="user-info">
            <div class="user-info-name">
              <%= user.display %>
            </div>
            <div class="user-info-email">
              <%= user.email %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <form action="/phone" method="post" class="form-inline">
            <div class="form-group">
              <div class="input-group">
                <input type="text" class="form-control" id="phone" name="phone" value="<%= user.phone %>" placeholder="Phone number">
                <div class="input-group-addon">
                  <button type="submit" class="btn-enter-update">
                    Update Number
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
      <% } %>
      <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <a href="/logout">
                <button type="button" class="btn btn-default btn-block">
                    Logout
                </button>
              </a>
            </div>
          </div>
        </div>
      </nav>

<% include foot.ejs%>
